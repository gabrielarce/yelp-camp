<%- include("../partials/header") %>


<div class="container">
  <div class="row">
    <h1 style="text-align: center;">Create a new campground</h1>
      <div style="width:30%; margin: 0 auto;">
        <form class="" action="/campgrounds" method="POST">
          <div class="form-group">
            <input class="form-control"type="text" name="name" placeholder="name this camp">
          </div>
          <div class="form-group">
            <input class="form-control"type="number" name="price" placeholder="price" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="image" placeholder="url the image of this camp">
          </div>
          <div class="form-group">
            <input class="form-control"type="text" name="description" placeholder="Tell us about this camp">
          </div>
          <div class="form-group">
            <input class="btn btn-lg btn-primary btn-block"type="submit" name="" value="Enter">
          </div>
        </form>
      </div>
    <a href="/campgrounds">Go Back</a>
  </div>
</div>


<%- include("../partials/footer") %>
